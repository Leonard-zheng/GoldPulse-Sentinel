# 数据源（目前示例用 Twelve Data）
PROVIDER=twelvedata
# 支持多个 key（逗号分隔）；程序会轮询使用，配额/限流时自动切换
TWELVEDATA_API_KEYS=KEY1,KEY2,KEY3
# 兼容：只填一个也可以
# TWELVEDATA_API_KEY=KEY1
TWELVEDATA_SYMBOL=XAU/USD

POLL_SECONDS=60
STATE_FILE=.goldx_state.json

# 监测时段（按中国大陆时间）
MONITOR_TZ=Asia/Shanghai
MONITOR_START=02:00
MONITOR_END=24:00

# 策略参数（可先用默认值跑起来，再慢慢调）
REBOUND_PCT=0.03
REBOUND_MAX_PCT=0.35
LOW_MAX_AGE_MIN=15
SLOPE_WINDOW_MIN=5
SLOPE_THRESHOLD_PCT_PER_MIN=0.002
HIST_RISE_BARS=2
COOLDOWN_MINUTES=20
LOW_WINDOW_MIN=60
QUANTILE_WINDOW_MIN=300
Q_LOW=20
Q_SKIP=40
STALL_MIN=3
MICRO_REBOUND_PCT=0.03

# 调试：只打印不发邮件
DRY_RUN=0

# 邮件提醒附图（实时 alert 快照）
ALERT_PLOT_ON_EMAIL=1
ALERT_PLOT_DIR=alert_out

# 邮箱提醒（建议用“授权码/应用专用密码”，不要用网页登录密码）
SMTP_HOST=smtp.qq.com
SMTP_PORT=465
SMTP_SSL=1
SMTP_STARTTLS=0
SMTP_USER=your@qq.com
SMTP_PASSWORD=YOUR_SMTP_APP_PASSWORD
SMTP_FROM=your@qq.com
SMTP_TO=xx1@qq.com,xx2@qq.com
